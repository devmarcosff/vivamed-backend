services:
  postgresql:
    image: postgres:17
    container_name: postgresql
    restart: always
    environment:
      POSTGRES_USER: vivamed
      POSTGRES_PASSWORD: vivamed@2024
      POSTGRES_DB: vivamed
      TZ: "America/Sao_Paulo"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "5432:5432"

  pgadmin:
    image: dpage/pgadmin4:latest
    container_name: pgadmin
    restart: always
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@stevanini.com.br
      PGADMIN_DEFAULT_PASSWORD: admin
      PGADMIN_LISTEN_PORT: 80
    ports:
      - "5454:80"
    depends_on:
      - postgresql

volumes:
  postgres_data:
    driver: local
